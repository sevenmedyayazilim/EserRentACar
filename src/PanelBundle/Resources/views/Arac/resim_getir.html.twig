{% for resim in resimler  %}


<div class="col-lg-3 col-md-6" id="listItem_{{ resim.id }}">
    <div class="card">
        <div class="el-card-item" style="padding-bottom: 0px!important;">
            <div class="el-card-avatar el-overlay-1" style="margin-bottom: 0px!important;"> <img src="{{ resim.resim|timthumb('uploads/', 370, 250, 1, 100) }}"  />
                <div class="el-overlay handle">
                    <ul class="el-info">
                        <li><a class="btn default btn-outline image-popup-vertical-fit" href="{{ asset('uploads/'~resim.resim) }}"><i class="icon-magnifier"></i></a></li>
                        <li><a class="btn default btn-outline" href="javascript:void(0);" onclick="anaResimYap({{ resim.aid }},{{ resim.id }});"><i class="{% if resim.ana==1 %}fas fa-star{% else %}far fa-star{% endif %}"></i></a></li>
                        <li><a class="btn default btn-outline" href="javascript:void(0);" onclick="resimSil({{ resim.id }});"><i class="ti-close"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{% endfor %}

{% if resimler|length==0 %}
    <div class="alert alert-warning">Henüz resim yüklenmemiş. </div>
{% endif %}